<!DOCTYPE html>
<html>
<head>
  <title>Tabla de posiciones</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <header>
    <h1>Mezcla Caritas</h1>
  </header>
  <div class="container">
    <h2>Tabla de posiciones - Ronda <%= game.round %></h2>
    <table border="1" cellpadding="5">
      <tr><th>Sesi√≥n</th><th>Jugadores (puntos)</th><th>Puntos totales</th></tr>
      <% sessions.forEach(s => { %>
        <tr>
          <td><%= s.sessionId %></td>
          <td>
            <ul>
              <% s.players.forEach(pl => { %>
                <li><%= pl.name %> (<%= pl.points %>)</li>
              <% }) %>
            </ul>
          </td>
          <td><%= s.points %></td>
        </tr>
      <% }) %>
    </table>
    <form action="/next" method="post" style="margin-top:20px;">
      <button type="submit">Siguiente ronda</button>
    </form>
    <a href="/lobby">Volver al lobby</a>
  </div>
</body>
</html>
