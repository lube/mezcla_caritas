<% if (game && game.background) { %>
<style>
  body {
    position: relative;
  }
  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background: url('/<%= game.background.split('/').slice(-2).join('/') %>') right center/contain no-repeat;
    opacity: 0.15;
    filter: brightness(1.2);
    pointer-events: none;
    z-index: -1;
  }
</style>
<% } %>

